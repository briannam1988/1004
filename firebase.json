{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/generate",
        "function": "generate"
      },
      {
        "source": "/analyzeDecision",
        "function": "analyzeDecision"
      },
      {
        "source": "/calculate",
        "function": "calculate"
      }
    ]
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs20"
  }
}
